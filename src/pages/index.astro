---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Home from "../components/Home.astro";
import About from "../components/About.astro";
import Destination from "../components/Destination.astro";
import Tour from "../components/Tour.astro";
import Blog from "../components/Blog.astro";
import CardEmail from "../components/CardEmail.astro";
import Footer from "../components/Footer.astro";
import Testimony from "../components/Testimony.astro";
---

<Layout title="Trabook">
  <Header />
  <main>
		<Home />
		<About />
		<Destination />
		<Tour />
